<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, :placeholder => "Email para cadastro " %>
  </div>

  <div class="field">
    <%= f.password_field :password, :placeholder => "Senha para cadastro" %>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="field">
  <%= f.check_box :remember_me %> <strong>Lembrar meus dados</strong>
  </div><p></p> 
  <% end -%>

  <div class="actions">
    <%= f.submit "Efetuar Log in", class: 'btn btn-primary' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
