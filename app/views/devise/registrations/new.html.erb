<h2>Cadastro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :nome, :placeholder => "Nome para cadastro" %>
  </div>

  <div class="field">
    <%= f.text_field :username, :placeholder => "Username para cadastro" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, :placeholder => "email para cadastro" %>
  </div>

  <div class="field">
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> caracteres ou mais)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :placeholder => "password para cadastro" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Confirmar password" %>
  </div>

  <div class="actions">
    <%= f.submit "Confirmar", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
