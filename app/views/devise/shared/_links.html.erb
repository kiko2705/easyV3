<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-primary' %>
<% end -%><p></p>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Fazer Cadastro", new_registration_path(resource_name), class: 'btn btn-success' %>
<% end -%><br></br>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Esqueceu password?", new_password_path(resource_name), class: 'btn btn-warning' %>
<% end -%><p></p>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Nao recebeu instrucoes de confirmacao?", new_confirmation_path(resource_name), class: 'btn btn-warning' %>
<% end -%><p></p>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Nao recebeu instrucoes para destravar sua conta?", new_unlock_path(resource_name), class: 'btn btn-warning' %>
<% end -%><p></p>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Logar com #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-primary' %>
  <% end -%><p></p>
<% end -%>
